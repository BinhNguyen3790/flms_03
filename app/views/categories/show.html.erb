<%= provide(:title, @category.name) %>
<div class="container">
  <h1 class="my-4">
    <%= @category.name %><br/>
  </h1>
  <div class="row">

    <div class="col-md-6">
      <%= link_to image_tag("bookstack.png", alt: "Rails logo", width: "350") %>
    </div>

    <div class="col-md-6">
      <h3 class="my-3">Category Details</h3>
      <ul>
        <li><%= t(".name") %> <%= @category.name%></li>
      </ul>
    </div>
  </div>
</div>
