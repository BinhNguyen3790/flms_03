<div class="stars">
  <%= form_for @rating do |f| %>
    <%= f.hidden_field :book_id, value: @book.id %>
      <input class="star star-5" id="rating_rate_5" type="radio" name="rating[rate]" value="5" />
      <label class="star star-5" for="rating_rate_5"></label>
      <input class="star star-4" id="star-4" type="radio" name="rating[rate]" value="4"/>
      <label class="star star-4" for="star-4"></label>
      <input class="star star-3" id="star-3" type="radio" name="rating[rate]" value="3"/>
      <label class="star star-3" for="star-3"></label>
      <input class="star star-2" id="star-2" type="radio" name="rating[rate]" value="2"/>
      <label class="star star-2" for="star-2"></label>
      <input class="star star-1" id="star-1" type="radio" name="rating[rate]" value="1"/>
      <label class="star star-1" for="star-1"></label>
      <%= f.submit t(".rate"), class: "btn btn-success" %>
  <% end %>
</div>
