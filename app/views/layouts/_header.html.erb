<% if logged_in? && current_user.admin? %>
  <div class="">
    <div class="navbar-fixed-top fixed-top">
      <div class="row">
        <div class="container-fluid">
          <div class="pull-left">
            <div class="pull-left logo text-center">
              <span>
                <%= link_to t(".logo"), admin_root_path %>
              </span>
            </div>
          </div>
          <div class="pull-right">
            <div class="marr20">
              <ul class="nav navbar-top-links navbar-right">
                <li class="dropdown task">
                  <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="fa fa-tasks fa-fw"></i>
                  <i class="fa fa-caret-down"></i></a>
                  <ul class="dropdown-menu dropdown-tasks">
                    <li>
                      <a href="#">
                        <div>
                          <p><strong><%= t(".task") %></strong><span class="pull-right text-muted"><%= t(".complete") %></span></p>
                          <div class="progress progress-striped active">
                            <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="40" class=
                            "progress-bar progress-bar-success" role="progressbar" style="width: 40%">
                              <span class="sr-only"><%= t(".complete") %></span>
                            </div>
                          </div>
                        </div>
                      </a>
                    </li>
                    <li class="divider"></li>
                    <li>
                      <a class="text-center" href="#"><strong><%= t(".all_tasks") %></strong> <i class=
                      "fa fa-angle-right"></i></a>
                    </li>
                  </ul><!-- /.dropdown-tasks -->
                </li><!-- /.dropdown -->
                <li class="dropdown bell">
                  <a aria-expanded="false" class="dropdown-toggle" data-toggle="dropdown" href="#"><i class=
                  "fa fa-bell fa-fw"></i> <i class="fa fa-caret-down"></i></a>
                  <ul class="dropdown-menu dropdown-alerts">
                    <li>
                      <a href="#">
                      <div>
                        <i class="fa fa-comment fa-fw"></i> <%= t('.new_comment') %><span class="pull-right text-muted small"><%= t(".minute") %></span>
                      </div></a>
                    </li>
                    <li class="divider"></li>
                    <li>
                      <a class="text-center" href="#"><strong><%= t(".all_alert") %></strong> <i class=
                      "fa fa-angle-right"></i></a>
                    </li>
                  </ul><!-- /.dropdown-alerts -->
                </li><!-- /.dropdown -->
                <li class="dropdown user">
                  <a aria-expanded="false" class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                  </a>
                  <ul class="dropdown-menu dropdown-user">
                    <li>
                      <%= link_to requests_path do %>
                        <i class="fa fa-user fa-fw"></i>
                        <%=  t(".cart") %>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to current_user do %>
                        <i class="fa fa-user fa-fw"></i>
                        <%=  t(".profile") %>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to edit_user_path(current_user) do %>
                        <i class="fa fa-gear fa-fw"></i>
                        <%=  t(".setting") %>
                      <% end %>
                    </li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to logout_path, method: :delete do %>
                        <i class="fa fa-sign-out fa-fw"></i>
                        <%= t(".logout") %>
                      <% end %>
                    </li>
                  </ul><!-- /.dropdown-user -->
                </li><!-- /.dropdown -->
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="wrap">
      <div class="side-menu">
        <nav class="navbar navbar-default" role="navigation">
          <div class="navbar-header">
            <div class="brand-wrapper">
              <div class="brand-name-wrapper">
                <small class="navbar-brand" href="#"><%= t(".menu") %></small>
              </div><a class="btn btn-default" data-toggle="collapse" href="#search" id="search-trigger"><span class=
              "glyphicon glyphicon-search"></span></a>
              <div class="panel-collapse collapse" id="search">
                <div class="panel-body">
                  <%= form_tag admin_books_path, method: :GET, class: "navbar-form",
                    role: "search" do %>
                    <div class="form-group">
                      <%= text_field_tag :search, params[:search], class: "form-control",
                        placeholder: t(".search") %>
                    </div>
                    <button class="btn btn-default" type="submit">
                      <span class="glyphicon glyphicon-ok"></span>
                    </button>
                  <% end %>
                </div>
              </div>
            </div>
          </div><!-- Main Menu -->
          <div class="side-menu-container">
            <ul class="nav navbar-nav">
              <li>
                <%= link_to admin_root_path do %>
                <span class="glyphicon glyphicon-dashboard"></span>
                  <%= t(".dashboard") %>
                <% end %>
              </li>
              <li>
                <%= link_to admin_requests_path do %>
                <span class="glyphicon glyphicon-shopping-cart"></span>
                  <%= t(".cart") %>
                <% end %>
              </li>
              <li>
                <%= link_to users_path do %>
                <span class="glyphicon glyphicon-user"></span>
                  <%= t(".user") %>
                <% end %>
              </li>
              <li>
                <%= link_to admin_books_path do %>
                <span class=" glyphicon glyphicon-book"></span>
                  <%= t(".book") %>
                <% end %>
              </li>
              <li>
                <%= link_to admin_categories_path do %>
                <span class="glyphicon glyphicon-th"></span>
                  <%= t(".category") %>
                <% end %>
              </li>
              <li>
                <%= link_to current_user do %>
                <span class="glyphicon glyphicon-file"></span>
                  <%= t(".profile") %>
                <% end %>
              </li><!-- Dropdown-->
              <li class="panel panel-default" id="dropdown">
                <a data-toggle="collapse" href="#dropdown-lvl1"><span class="glyphicon glyphicon-user"></span><%= current_user.name %><span class="caret"></span></a> <!-- Dropdown level 1 -->
                <div class="panel-collapse collapse" id="dropdown-lvl1">
                  <div class="panel-body">
                    <ul class="nav navbar-nav">
                      <li>
                        <%= link_to requests_path do %>
                          <i class="glyphicon glyphicon-shopping-cart"></i>
                          <%=  t(".cart") %>
                        <% end %>
                      </li>
                      <li>
                        <%= link_to current_user do %>
                          <i class="glyphicon glyphicon-file"></i>
                          <%=  t(".profile") %>
                        <% end %>
                      </li>
                      <li class="panel panel-default" id="dropdown">
                        <a data-toggle="collapse" href="#dropdown-lvl2"><span class="glyphicon glyphicon-off"></span><%=  t(".setting") %> <span class="caret"></span></a>
                        <div class="panel-collapse collapse" id="dropdown-lvl2">
                          <div class="panel-body">
                            <ul class="nav navbar-nav">
                              <li>
                                <%= link_to edit_user_path(current_user) do %>
                                  <i class="fa fa-gear fa-fw"></i>
                                  <%=  t(".change") %>
                                <% end %>
                              </li>
                            </ul>
                          </div>
                        </div>
                      </li>
                      <li class="divider"></li>
                      <li>
                        <%= link_to logout_path, method: :delete do %>
                          <i class="fa fa-sign-out fa-fw"></i>
                          <%= t(".logout") %>
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </div>
              </li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </nav>
      </div><!-- Main Content -->
      <div class="container-fluid">
      <div class="side-body">
      <div class="page-title-box">
        <h3 class="page-title pull-left"><%= t(".dashboard") %></h3>
        <ol class="breadcrumb pull-right">
          <li>
            <%= link_to admin_root_path, class: "active" do %>
              <%= t(".home") %>
            <% end %>
          </li>
          <li class="active"><%= t(".dashboard") %></li>
        </ol>
        <div class="clearfix"></div>
      </div>
<% else %>
  <div>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
            <!--end navbar-toggle -->
            <%= link_to "", root_path, class: "navbar-brand" %>
        </div>
        <!--end nav header-->
        <div class="collapse navbar-collapse pull-right" id="myNavbar">
          <ul class="nav navbar-nav">
            <li><%= link_to t(".home"), home_path %></li>
            <li><%= link_to t(".books"), books_path %></li>
            <li><%= link_to t(".categories"), categories_path %></li>
            <% if logged_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= t(".account") %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to t(".cart"), requests_path %></li>
                  <li><%= link_to t(".profile"), current_user %></li>
                  <li><%= link_to t(".setting"), edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to t(".logout"), logout_path, method: :delete %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to t(".login"), login_path %></li>
            <% end %>
            <li>
              <%= render "layouts/search" %>
            </li>
          </ul>
          <!--end ul-->
        </div>
        <!--end collapse navbar-collapse-->
      </div>
      <!--end container-fluid-->
    </nav>
    <!--end nav-->
  </div>
<% end %>
