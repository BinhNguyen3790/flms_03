<div class="login row">
  <div class="col-md-6 col-md-offset-3">
    <div href="#" class="thumbnail">
      <%= form_for(@request) do |f| %>

        <%= f.hidden_field :user_id, value: current_user.id %>

        <%= f.hidden_field :book_id, value: @request.book.id %>

        <div class="form-group">
          <%= f.label :quantity %>
          <%= f.number_field :quantity, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :from_date %>
          <%= f.date_field :from_date, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :to_date %>
          <%= f.date_field :to_date, class: "form-control", required: true %>
        </div>

        <div class="form-group">
          <div class="col-md-6">
            <%= f.submit t(".back"), class: "btn btn-primary" %>
          </div>
          <div class="col-md-6">
            <%= f.submit t(".add"), class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
