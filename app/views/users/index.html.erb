<% provide(:title, t(".all")) %>
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <i class="fa fa-table fa-fw"></i> <%= t(".user_table") %>
      </div>
      <div class="table-responsive">
        <div class="row">
          <div class="col-md-2">
            <%= link_to t(".download"), users_path(format: "csv", search: params[:search]), class: "btn btn-md btn-success form-control" %>
          </div>
        </div>
        <table class="table table-hover" id="example">
          <thead>
            <tr>
              <th><%= t ".image" %></th>
              <th><%= t ".name" %></th>
              <th><%= t ".email" %></th>
              <th><%= t ".phone" %></th>
              <th><%= t ".address" %></th>
              <th><%= t ".admin" %></th>
              <th><%= t ".action" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @users %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="row"><div class="text-center"><%= will_paginate %></div></div>

