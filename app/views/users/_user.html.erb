<tr>
  <td><%= gravatar_for user, size: Settings.user.size %></td>
  <td><%= link_to user.name, user %></td>
  <td><%= user.email %></td>
  <td><%= user.phone %></td>
  <td><%= user.address %></td>
  <td><span class="label label-success"><%= user.admin %></span></td>
  <td>
    <%= link_to user, method: :delete, data: { confirm: t(".sure") }, class: "btn btn-danger" do %>
      <i class="fa fa-trash"> </i>
    <% end %>
  </td>
</tr>
