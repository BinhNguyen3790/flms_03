<% provide(:title, t(".create")) %>
<div class="login row">
  <div class="col-md-10 col-md-offset-1">
    <div href="#" class="thumbnail">
      <h1><%= t(".create") %></h1>

      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <%= form_for [:admin, @category] do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
            <%= f.label :image %>
            <%= f.text_field :image, class: "form-control" , value: "categories.jpg" %>
            <%= f.submit t(".create"), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
