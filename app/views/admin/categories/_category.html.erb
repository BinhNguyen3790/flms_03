<tr>
  <td><%= image_tag(category.image, alt: "Rails logo", width: "50") %></td>
  <td>
    <%= link_to admin_category_path(category) do %>
      <%= category.name %>
    <% end %>
  </td>
  <td class="center">
    <%= link_to edit_admin_category_path(category), class: "btn btn-primary" do %>
      <i class="fa fa-pencil"> </i>
    <% end %>
  </td>
  <td class="center">
    <%= link_to admin_category_path(category), method: :delete,
        data: { confirm: t(".sure", count: category.books.count) }, class: "btn btn-danger" do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </td>
</tr>
