<% provide(:title, t(".request")) %>
<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-success">
      <div class="panel-heading">
        <i class="fa fa-table fa-fw"></i> <%= t(".request_table") %>
      </div>
      <div class="panel">
        <div class="row">
          <div class="col-md-2">
            <%= link_to t(".download"), admin_requests_path(format: "csv", search: params[:search]), class: "btn btn-md btn-success form-control" %>
          </div>
          <div class="col-md-10">
            <%= search_form_for @search, url: admin_requests_path do |f| %>
              <div class="active-cyan-4 mb-4">
                <%= f.search_field :id_eq, class: "form-control", placeholder: t(".search") %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table table-hover" id="example">
          <thead>
            <tr>
              <th><%= t ".book" %></th>
              <th><%= t ".user" %></th>
              <th><%= t ".quantity" %></th>
              <th><%= t ".from_date" %></th>
              <th><%= t ".to_date" %></th>
              <th class="center"><%= t ".action" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @requests %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="row"><div class="text-center"><%= will_paginate %></div></div>
