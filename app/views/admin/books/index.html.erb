<% provide(:title, t(".books")) %>
<div class="container">
  <h1><%= t(".books") %></h1>
  <%= form_tag admin_books_path, method: :GET do %>
    <div class="active-cyan-4 mb-4">
      <%= text_field_tag :search, params[:search], class: "form-control",
        placeholder: t(".search") %>
    </div>
  <% end %>
  <%= link_to t(".create"), new_admin_book_path, class: "btn btn-lg btn-primary" %>
  <ul class="books">
    <%= render @books %>
  </ul>
  <%= will_paginate %>
</div>
